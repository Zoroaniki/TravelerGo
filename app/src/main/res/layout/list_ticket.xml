<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_list_second"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/imageTicketList"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@color/dark_gray"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"/>

    <TextView
        android:id="@+id/nameTicketList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageTicketList"
        android:text="Name"
        android:maxLength="30"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/descriptionTicketList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/imageTicketList"
        android:text="Description"
        android:textSize="10sp"
        android:textStyle="normal"
        android:textColor="@color/green"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="12dp"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/priceTicketList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageTicketList"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"
        android:text="price"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        tools:ignore="HardcodedText,SmallSp" />


    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="14dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <View
            android:id="@+id/bgStatusTicket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_list"/>

        <TextView
            android:id="@+id/statusTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:text="Оплачено"
            android:layout_gravity="center"
            android:textAllCaps="false"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>