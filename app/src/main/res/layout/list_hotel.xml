<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/bg_item_list"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/imageHotelList"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@color/dark_gray"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"/>

    <TextView
        android:id="@+id/nameHotelList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageHotelList"
        android:text="Name"
        android:maxLength="30"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/descriptionHotelList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/imageHotelList"
        android:text="Description"
        android:textSize="10sp"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="35dp"
        android:layout_above="@+id/moreBtn"
        android:layout_marginBottom="12dp"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/priceHotelList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageHotelList"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"
        android:text="price"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:ignore="HardcodedText,SmallSp" />
</RelativeLayout>