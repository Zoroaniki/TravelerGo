<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.SignInFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Давай познакомимся"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/firstNameSignUp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_edit_text_search"
        android:hint="Ваше имя"
        android:paddingStart="20dp"
        android:textColorHint="@color/lime"/>

    <EditText
        android:id="@+id/lastNameSignUp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/firstNameSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_text_search"
        android:hint="Ваша фамилия"
        android:paddingStart="20dp"
        android:textColorHint="@color/lime"/>

    <EditText
        android:id="@+id/patronymicSignUp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/lastNameSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_text_search"
        android:hint="Ваша фамилия"
        android:paddingStart="20dp"
        android:textColorHint="@color/lime"/>

    <EditText
        android:id="@+id/phoneSignUp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/patronymicSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_text_search"
        android:hint="Номер телефона"
        android:paddingStart="20dp"
        android:textColorHint="@color/lime"/>

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/phoneSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_list"
        android:text="Зарегистрироваться"/>

</RelativeLayout>