<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.views.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvatar"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:layout_marginStart="26dp"
        app:cardCornerRadius="999dp"
        app:cardBackgroundColor="@color/green"
        android:innerRadius="0dp"
        android:shape="ring">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="999dp"
            app:cardBackgroundColor="@color/green"
            android:layout_gravity="center"
            android:innerRadius="0dp"
            android:shape="ring">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/imageProfile"
                android:src="@drawable/ava"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/usernameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cardAvatar"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="26dp"
        android:textSize="24dp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:text="Username"/>

    <TextView
        android:id="@+id/fioProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cardAvatar"
        android:layout_below="@+id/usernameProfile"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:textSize="12dp"
        android:textColor="@color/dark_gray"
        android:textStyle="normal"
        android:text="FIO"/>

    <TextView
        android:id="@+id/ageProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cardAvatar"
        android:layout_below="@+id/fioProfile"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:textSize="12dp"
        android:textColor="@color/dark_gray"
        android:textStyle="normal"
        android:text="Age"/>


    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_setting"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="26dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPassport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardAvatar"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/addPassportBtn"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_btn_green"
        android:text="Добавить пасспорт"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"/>
</RelativeLayout>